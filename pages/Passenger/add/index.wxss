page{
  background: #efefef;
}
.AddInfoBox{
  width: 100%;
  display: flex;
  flex-direction: column;
  align-items: flex-start;
  justify-content: center;
  margin: 10px auto;
}
.InfoItem{
  width: calc(100% - 40rpx);
  height: 100rpx;
  display: flex;
  justify-content: space-between;
  align-items: center;
  padding: 0 20rpx;
  background: #fff;
  margin-bottom: 10px;
}
.InfoItem text{
  width: 150rpx;
}
.InfoItem input{
  width: calc(710rpx - 150rpx - 50rpx);
}
.InfoItem .phcolor{
  /* font-size: 30rpx; */
  color: #ccc;
}
.AddInfoBtn{
  width: 90%;
  height: 100rpx;
  margin: 0 auto;
  text-align: center;
  line-height: 100rpx;
  background: #3498db;
  color: #fff;
  border-radius: 10rpx;
}