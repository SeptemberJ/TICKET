.DateChoose{
  width: 100%;
  height: 60rpx;
  display: flex;
  justify-content: space-between;
  align-items: center;
  font-size: 30rpx;
}
.PreBt , .NextBt{
  width: 150rpx;
  height: 100%;
  text-align: center;
  line-height: 60rpx;
  color: #3498db;
}
.DatePicker{
  height: 100%;
  display: flex;
  flex-grow: 1;
  justify-content: center;
  align-items: center;
  border: 1px solid #3498db;
}
.disableBt{
  color: #ccc;
}
/*Schedules  */
.Schedules{
  width: calc(100% - 40rpx);
  margin: 10px auto;
  display: flex;
  flex-direction: column;
  justify-content: flex-start;
  align-items: space-between;
}
.ScheduleItem{
  width: 710rpx;
  height: 200rpx;
  display: flex;
  justify-content: space-between;
  align-items: center;
  border-bottom: 1px solid #ddd;
}
.ScheduleItem:nth-of-type(1){
  border-top: 1px solid #ddd;
}
.ScheduleItem .TimeBlock{
  width: 200rpx;
  height: 100%;
  text-align: center;
  line-height: 200rpx;
  border-right: 1px dotted #ccc
}
.ScheduleItem .InfoBlock{
  width: 510rpx;
  height: 100%;
  display: flex;
  flex-direction: column;
  align-items: flex-start;
  justify-content: space-around;
}
.ScheduleItem .InfoBlock view{
  width: 100%;
  height: 50rpx;
  display: flex;
  justify-content: flex-start;
  align-items: center;
}
.ScheduleItem .InfoBlock view text:nth-of-type(1){
  width: 100rpx;
  padding-left: 10rpx;
  color: #ccc;
  font-size: 30rpx;
}
.ScheduleItem .InfoBlock view text:nth-of-type(2){
  width: calc(510rpx - 250rpx);
  font-size: 30rpx;
}
.ScheduleItem .InfoBlock view text:nth-of-type(3){
  width: 150rpx;
  font-size: 30rpx;
  text-align: right;
}