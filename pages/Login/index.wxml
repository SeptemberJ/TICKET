<view class="wrap">
  <image class='topBlock' mode="aspectFill" src='../../images/20160808132721_57281_new.jpg'></image>
  <view class='overlay'></view>
  <view class='loginBox'>
    <image class='logo' mode="aspectFit" src='../../IMAGES/logo_bus.png'></image>
    <view class='login_item'>
      <image src='../../images/login_phone.png'></image>
      <input placeholder-class="phcolor" placeholder="手机号" bindinput='ChangePhone'/>
    </view>
    <view class='login_item'>
      <image src='../../images/login_psd.png'></image>
      <input placeholder-class="phcolor" placeholder="密码" bindinput='ChangePsd'/>
    </view>
    <view class='login_item' style='width:100%;height:80rpx;font-size:30rpx;color:#fff;'>
      <text>忘记密码</text>
      <text bindtap='GoSign'>立即注册</text>
    </view>
